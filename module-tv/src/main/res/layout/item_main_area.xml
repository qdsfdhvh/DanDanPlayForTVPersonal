<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/homeFragment_area_width"
    android:layout_height="@dimen/homeFragment_area_height"
    android:orientation="vertical">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@id/img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:layout_constraintTop_toTopOf="parent"
        fresco:layout_constraintStart_toStartOf="parent"
        fresco:layout_constraintEnd_toEndOf="parent"
        fresco:layout_constraintBottom_toTopOf="@id/title"/>
    <TextView
        style="@style/DanDanTvTextStyle.Title"
        android:id="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        tools:text="暗黑破坏神在身边"
        fresco:layout_constraintTop_toBottomOf="@id/img"
        fresco:layout_constraintBottom_toTopOf="@id/chapter"
        fresco:layout_constraintStart_toStartOf="parent"
        fresco:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        style="@style/DanDanTvTextStyle.Chapter"
        android:id="@id/chapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="连载中·周六更新"
        fresco:layout_constraintTop_toBottomOf="@id/title"
        fresco:layout_constraintBottom_toBottomOf="parent"
        fresco:layout_constraintStart_toStartOf="parent"
        fresco:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>