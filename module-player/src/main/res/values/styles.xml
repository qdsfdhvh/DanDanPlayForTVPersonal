<!--        <item name="font_light">@color/grey50transparent_ea</item>-->
<!--        <item name="empty_button">@style/Widget.Leanback.DetailsActionButtonStyle</item>-->
    </style>

    <style name="VLC.TextView" parent="android:Widget.TextView">
        <item name="android:textDirection">locale</item>
    </style>

    <style name="VLC.CtxTitle" parent="VLC.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="VLC.ImageButton" parent="CommonTheme.ImageButton">
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:tint">@color/player_button_hint_tv</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">2dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="TipsFontStyle">
        <item name="android:textColor">@color/orange700</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TipsFontStyle.Small" parent="TipsFontStyle">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="VLCImageCardViewContentStyleTextAppearance" parent="TextAppearance.Leanback.ImageCardView.Content">
        <item name="android:gravity">center_horizontal</item>
    </style>
